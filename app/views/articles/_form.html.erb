<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= form.label :author, class: "form-label" %>
    <%= form.text_field :author, class: "form-control" %>
  </div>

  <div class="field form-check mb-3">
    <%= form.label :is_published, class: "form-check-label" %>
    <%= form.check_box :is_published, class: "form-check-input" %>
  </div>

  <div class="field mb-3">
    <%= form.label :publish_date, class: "form-label" %>
    <%= form.text_field :publish_date, type: "date", class: "datepicker form-control" %>
  </div>

  <div class="field mb-3">
    <%= form.label :content, class: "form-label" %>
    <%= form.rich_text_area :content, class: "form-control" %>
  </div>

  <div class="actions mb-3">
    <%= form.submit nil, class: "btn btn-primary"%>
  </div>
<% end %>
