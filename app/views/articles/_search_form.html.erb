<%= form_with url: search_articles_path, method: "get", class: "search-form d-flex" do |form|%>
  <%= form.text_field :q, class: "form-control me-2", value: locals[:q], type: "search", placeholder: "Search", aria_label: "Search" %>
  <%= form.submit "Search", class: "btn btn-outline-success" %>
<% end %>

