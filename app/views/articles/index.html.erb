<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <h1>Articles</h1>

            <div class="float-lg-end mb-3">
                <%= render 'search_form' %>
            </div>

            <table class="table mt-3">
              <thead>
                <tr>
                  <th scope="col">Title</th>
                  <th scope="col">Publish date</th>
                  <th scope="col" colspan="3">Actions</th>
                </tr>
              </thead>

              <tbody>
                <% @articles.each do |article| %>
                  <tr>
                    <td class="col"><%= article.title %></td>
                    <td class="col"><%= article.publish_date %></td>
                    <td class="col"><%= link_to fa_icon("search-plus"), article %></td>
                    <td class="col"><%= link_to fa_icon("edit"), edit_article_path(article) %></td>
                    <td class="col"><%= link_to fa_icon("trash"), article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>
            <%= link_to 'New Article', new_article_path %>
        </div>
        <div class="col-2"></div>
    </div>
</div>

