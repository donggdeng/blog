<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <%= render 'search_form', locals: {q: params['q']} %>
            <div class="mt-3">
                <article>
                    <% if @articles.empty? %>
                        <div>
                            No results. Try search something else.
                        </div>
                    <% else %>
                        <div class="search-result">
                            <table class="table table-bordered mt-3">
                                <tbody>
                                    <% @articles.each do |article| %>
                                        <tr>
                                            <td>
                                                <div class="mb-1">
                                                    <%= link_to article do %>
                                                        <span><%= article.title %></span>
                                                        <em>
                                                            <small> 
                                                                by 
                                                                <%= article.author %>
                                                            </small>
                                                        </em>
                                                    <% end %>
                                                </div>
                                            </td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    <% end %>
                </article>
            </div>
            

        </div>
        
        <div class="col-md-3"></div>
    </div>
</div>

