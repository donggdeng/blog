<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <%= render 'search_form' %>
            <article>
                
                <% if @articles.empty? %>
                    <div>
                        No results. Try search something else.
                    </div>
                <% end %>
                
                <% @articles.each do |article| %>
                    <header></header>
                    <div >
                    <div >
                        <%= link_to article do %>
                        <%= article.title %>
                        <% end %>
                    </div>
                    </div>
                <% end %>
            </article>

        </div>
        
        <div class="col-3"></div>
    </div>
</div>

